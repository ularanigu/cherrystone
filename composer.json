{
    "name": "ularanigu/cherrystone",
    "description": "An authentication library designed to ensure security on web authentication systems.",
    "keywords": [
        "php7",
        "authentication-middleware",
        "authentication-system",
        "web-security",
        "php-security",
        "secure-by-default"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.0",
        "ramsey/uuid": ">=3.7",
        "ext-json": "*"
    },
    "authors": [
        {
            "name": "Nicholas English",
            "email": "nenglish6657@gmail.com",
            "homepage": "https://github.com/ularanigu"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ularanigu\\Cherrystone\\": "./src"
        },
        "files": [
            "./lib/runtime.php",
            "./lib/functions.php"
        ]
    },
    "suggest": {
        "symfony/yaml": "To log information in yaml format."
    },
    "require-dev": {
        "phpunit/phpunit": "^6|^7",
        "squizlabs/php_codesniffer": "^3",
        "vimeo/psalm": "^1"
    },
    "scripts": {
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "prefer-stable": true
}
